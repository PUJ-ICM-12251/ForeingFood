<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondomadera"
    tools:context=".MenuActivity">

    <Button
        android:id="@+id/btnPerfil"
        android:layout_width="199dp"
        android:layout_height="61dp"
        android:text="Perfil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.132" />

    <Button
        android:id="@+id/btnMapa"
        android:layout_width="195dp"
        android:layout_height="63dp"
        android:layout_marginTop="44dp"
        android:text="Mapa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPerfil" />

    <Button
        android:id="@+id/btnChat"
        android:layout_width="176dp"
        android:layout_height="63dp"
        android:layout_marginTop="36dp"
        android:text="Chat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMapa" />


    <Button
        android:id="@+id/btnListaUsers"
        android:layout_width="168dp"
        android:layout_height="77dp"
        android:layout_marginTop="40dp"
        android:text="Usuarios"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnChat"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnListaRestaurantes"
        android:layout_width="168dp"
        android:layout_height="77dp"
        android:layout_marginTop="40dp"
        android:text="Lista de Restaurantes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnListaUsers" />
</androidx.constraintlayout.widget.ConstraintLayout>